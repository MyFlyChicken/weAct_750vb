# Enable MPU
CONFIG_ARM_MPU=y

# Enable HW stack protection
CONFIG_HW_STACK_PROTECTION=y

# Enable UART
CONFIG_SERIAL=y

# Console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable GPIO
CONFIG_GPIO=y


# If linker still places ROM at 0x08000000,
# uncomment the two lines below to force ROM to external mapped base (STM32H7 QSPI @ 0x90000000)
# CONFIG_FLASH_BASE_ADDRESS=0x90000000
# # in KB (8MB device / adjust to your code partition size)
# CONFIG_FLASH_SIZE=8192  


